body.stat
    color:      black
    a
        color:  black
    background: white
    #stat
        display: block

#stat
    display: none
    h1
        margin-top: 0
        border-bottom: solid 2px black
        font-family: menu-font
        font-size: 24px
        img
            height: 36px
            vertical-align: bottom
    .version
        margin-top: -3em
        font-size: 12px
        font-family: text-font
        text-align: right

    .stat
        margin-top: 20px
        overflow: auto
        > div
            display: table

        .button
            float: right
            font-family: menu-font
            font-size: 12px
            input[name="n_game"]
                width: 2em

        a.file
            margin-left: 10px
            display: inline-block
            font-family: menu-font
            font-size: 14px
            padding: 6px 10px
            background: #999
            border-radius: 5px
            white-space: nowrap
            cursor: pointer
            color: white
            line-height: 1em
            text-decoration: none
            img
                width: 14px
                height: 14px
                margin-right: 4px
                vertical-align: bottom
            &:hover
                background: #ccc

    h2
        margin: 0px
        font-size: 18pt
        font-family: title-font
        &::after
            display: block
            content: ''
            clear: both
    table
        margin-top: 1em
        border-collapse: collapse
        font-size: 16px
        white-space: nowrap
        thead
        tbody
            border-bottom: solid 2px black
            tr
                border-bottom: solid 1px #ccc
        th
            padding: 2px 10px 2px 8px
            font-family: menu-font
            &.asc
                background: no-repeat right center url(../img/icon-chevron-up.png)
                background-size: 8px
            &.desc
                background: no-repeat right center url(../img/icon-chevron-down.png)
                background-size: 8px
            a
                cursor: pointer
        td
            padding: 2px 1em
            font-family: text-font
            &.num
                text-align: right
    .error
        display: none
        margin: 10px 0px
        border-radius: 5px
        border: solid 1px #f99
        color: red
        background: #fdd
        padding: 4px 1em
        font-size: 12px
        font-family: menu-font
